<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<!-- Import Rviz colors -->
<xacro:include filename="$(find one_dynamixel_simulation)/urdf/one_dynamixel_simulation.material.xacro" />

  <joint name="origin_to_link1" type="fixed">
    <parent link="world" />
    <child link="link1" />
    <axis xyz="0 0 1" />
    <origin xyz="0 0 0.07" rpy="0 0 0" />
  </joint>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <mesh filename="file://$(find one_dynamixel_simulation)/meshes/mx-28at_ar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <mesh filename="file://$(find one_dynamixel_simulation)/meshes/mx-28at_ar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0.2407e-03 -12.903e-03 0.5949e-03" />
      <mass value="0.075" />
      <inertia ixx="22649.62e-06" ixy="36.779e-06" ixz="-213.05e-06"
               iyy="12868.3e-06" iyz="-1145.65e-06"
               izz="17733.142e-06" />
    </inertial>
  </link>
  <gazebo reference="link1">
        <material>Gazebo/Grey</material>
  </gazebo>
  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.0 -0.03 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit velocity="5.76" effort="2.5" lower="-${pi}" upper="${pi}" />
    <dynamics damping="0.2" friction="0.2"/>
  </joint>
  <gazebo reference="joint1">
      <implicitSpringDamper>true</implicitSpringDamper>
      <springStiffness>6.0</springStiffness>
      <springReference>0.01</springReference>
      <stopErp>0.2</stopErp>
      <stopCfm>0.2</stopCfm>
  </gazebo>
  <!--  Link 2 -->
  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="${pi} 0 0"/>
      <geometry>
        <mesh filename="file://$(find one_dynamixel_simulation)/meshes/hn07-n101.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="${pi} 0 0"/>
      <geometry>
        <mesh filename="file://$(find one_dynamixel_simulation)/meshes/hn07-n101.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

     <inertial>
      <origin xyz="-3.0184870e-04 5.4043684e-04 0.047433464e-02" />
      <mass value="9.8406837e-02" />
      <inertia ixx="3.4543422e-05" ixy="-1.6031095e-08" ixz="-3.8375155e-07"
               iyy="3.2689329e-05" iyz="2.8511935e-08"
               izz="1.8850320e-05" />
    </inertial>
  </link>
  <gazebo reference="link2">
        <material>Gazebo/Grey</material>
  </gazebo>

</robot>
